{
  "name": "turbo-rainbow-husky",
  "private": true,
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preview": "dotenv -- turbo preview",
    "deploy": "dotenv -- turbo deploy",
    "destroy": "dotenv -- turbo destroy",
    "generate-web-env-vars": "turbo generate-web-env-vars"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-turbo": "^1.12.3",
    "prettier": "^3.1.0",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "apps/*/*",
    "packages/*",
    "infra/*",
    "services/*/*"
  ]
}
