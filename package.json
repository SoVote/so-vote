{
  "name": "turbo-rainbow-husky",
  "private": true,
  "scripts": {
    "build": "turbo build --cache-dir=.turbo",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "dotenv -- turbo deploy",
    "destroy": "dotenv -- turbo destroy"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.10.5",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "apps/*/*",
    "packages/*",
    "infra/*",
    "services/*/*"
  ]
}
